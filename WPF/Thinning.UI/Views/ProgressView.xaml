<Window x:Class="Thinning.UI.Views.ProgressView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thinning.UI.Views"
        mc:Ignorable="d"
        Title="Progress" Height="200" Width="400">
    <Grid Margin="80">
        <ProgressBar Minimum="0" Maximum="100" Value="{Binding ProgressValue}" Height="Auto" Margin="0,0,0.333,-14.333" />
    </Grid>
</Window>
